
@{
    ViewBag.Title = "İzin Ekle";
}

<div class="row">
    <div class="col-md-12">

        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    İzin Ekleme Formu
                </div>
                <div class="block-controls">
                    <a href="/Rol/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Rol/Ekle" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">İzin Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="İzin adı giriniz" name="izinAdi">
                        </div>
                        

                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>




</div>
