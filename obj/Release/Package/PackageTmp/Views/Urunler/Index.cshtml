
@{
    ViewBag.Title = "Ürünler";
}

@Modelsing WebApplication6
@model List<Urunler>



    <div class="row">

                        <div class="col-md-12">
                            <div class="block">
                                <div class="block-heading">
                                    <div class="main-text h2">Ürünler</div>

                                    <div class="block-controls">
                                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                                        <a href="/Urun/UrunEkle" class="btn btn-success">Yeni Ürün</a>

                                    </div>
                                </div>
                                <div class="block-content-outer">
                                    <div class="block-content-inner">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Ürün Adı</th>
                                                    <th>Tedarikçi</th>
                                                    <th>Kategori</th>
                                                    <th>Birimdeki Miktar</th>
                                                    <th>Fiyat</th>
                                                    <th>Stok</th>
                                                    <th>Yeni Satış</th>
                                                    <th>Durum</th>
                                                    <th>Sil</th>



                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                               @foreach (Urunler u in Model)
	{
                                                <tr>
                                                    <td>@Model.UrunAdi</td>
                                                    @if (u.Tedarikciler == null)
                                                    {
                                                        <td></td>}
                                                    else
                                                    {
                                                        <td>@Model.Tedarikciler.SirketAdi</td>
                                                    }
                                                    @if (u.Kategoriler == null)
                                                    {
                                                        <td></td>}
                                                    else
                                                    {
                                                        <td>@Model.Kategoriler.KategoriAdi</td>
                                                    }
                                                    @if (u.BirimdekiMiktar == null)
                                                    {
                                                        <td></td> }
                                                    else
                                                    {
                                                        <td>@Model.BirimdekiMiktar</td>}
                                                    <td>@Model.Fiyat</td>
                                                    <td>@Model.Stok</td>
                                                    <td>@Model.YeniSatis</td>
                                                    @if (u.Sonlandi)
	{
		 <td><span class="label label-danger">Bitti</span></td>}
                                                    else
                                                    { 
                                                        <td><span class="label label-success">Var</span></td>}

                                                    <td><a href="/Urun/Sil" class="btn btn-danger">Sil</a></td>

                                                </tr>
	}     
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
         
